<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.videos.VideoActivity">

    <TextView
        android:id="@+id/video_title"
        android:layout_width="335dp"
        android:layout_height="91dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp"
        android:text="@string/videoteca"
        android:textAlignment="center"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/choose_channel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/choose_channel"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="228dp" />

    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="1"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="386dp">

        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="191dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageNostalgicVideos"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="100dp"
                    android:contentDescription="@string/escuchar_musica"
                    android:onClick="goToNostagicVideos"
                    app:layout_constraintBottom_toBottomOf="@id/nostalgic_videos_label"
                    app:layout_constraintEnd_toStartOf="@+id/imageVideo"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.611"
                    app:srcCompat="@drawable/box_music" />

                <TextView
                    android:id="@+id/nostalgic_videos_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/videos_nostalgia"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageNostalgicVideos"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="@+id/imageNostalgicVideos"
                    app:layout_constraintTop_toBottomOf="@+id/imageNostalgicVideos"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageVideo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:contentDescription="@string/ver_videos"
                    android:onClick="goToRelaxation"
                    android:radius="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageNostalgicVideos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.528"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageNostalgicVideos"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/box_video"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/video_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/relajacion"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:textStyle="bold"

                    app:layout_constraintBaseline_toBaselineOf="@+id/nostalgic_videos_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageVideo"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="@+id/imageVideo"
                    app:layout_constraintTop_toBottomOf="@+id/imageVideo"
                    app:layout_constraintVertical_bias="0.348" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagePhotos"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="72dp"
                    android:contentDescription="@string/ponte_a_prueba_con_un_juego"
                    android:onClick="goToHumor"
                    app:layout_constraintBottom_toBottomOf="@+id/imageVideo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageVideo"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/box_photos"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/photos_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/humor"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/nostalgic_videos_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imagePhotos"
                    app:layout_constraintHorizontal_bias="0.435"
                    app:layout_constraintStart_toStartOf="@+id/imagePhotos"
                    app:layout_constraintTop_toBottomOf="@+id/imagePhotos"
                    app:layout_constraintVertical_bias="0.303" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>