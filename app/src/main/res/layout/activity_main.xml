<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/greeting"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/greeting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting2"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/imageVideo"
        app:layout_constraintEnd_toEndOf="@+id/greeting"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/greeting"
        app:layout_constraintTop_toBottomOf="@+id/greeting"
        app:layout_constraintVertical_bias="0.388" />

    <ImageView
        android:id="@+id/imageMusic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/escuchar_musica"
        android:onClick="goToMusic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageVideo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608"
        app:srcCompat="@drawable/box_music" />

    <TextView
        android:id="@+id/music_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/music"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageMusic"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/imageMusic"
        app:layout_constraintTop_toBottomOf="@+id/imageMusic"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageVideo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/ver_videos"
        android:onClick="goToVideos"
        android:radius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageMusic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageMusic"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/box_video"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/video_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/videoteca"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/music_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageVideo"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageVideo"
        app:layout_constraintTop_toBottomOf="@+id/imageVideo"
        app:layout_constraintVertical_bias="0.348" />

    <ImageView
        android:id="@+id/imagePhotos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/ponte_a_prueba_con_un_juego"
        android:onClick="goToPhotos"
        app:layout_constraintBottom_toBottomOf="@+id/imageVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageVideo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/box_photos"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/photos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/ponte_a_prueba"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/music_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagePhotos"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="@+id/imagePhotos"
        app:layout_constraintTop_toBottomOf="@+id/imagePhotos"
        app:layout_constraintVertical_bias="0.303" />

</androidx.constraintlayout.widget.ConstraintLayout>