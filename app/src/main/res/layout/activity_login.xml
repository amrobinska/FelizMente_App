<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="16dp"
    tools:context=".activities.access.LoginActivity">


    <TextView
        android:id="@+id/login_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_intro_line"
        android:textAlignment="center"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/user_email_label"
        style="@style/labels"
        android:text="@string/user_label"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="170dp" />

    <EditText
        android:id="@+id/user"
        style="@style/textBoxes"
        android:autofillHints="emailAddress"
        android:hint="@string/email_hint"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/password_label"
        style="@style/labels"
        android:text="@string/password_label"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="230dp" />


    <EditText
        android:id="@+id/userPass"
        style="@style/textBoxes"
        android:autofillHints="password"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="221dp" />

    <Button
        android:id="@+id/login_button"
        style="@style/dark_button"
        android:onClick="login"
        android:text="@string/login"
        tools:layout_editor_absoluteX="485dp"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/go_to_registration_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToRegistration"
        android:text="@string/sign_in"
        app:icon="@drawable/ic_add_24dp"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="285dp" />


</androidx.constraintlayout.widget.ConstraintLayout>