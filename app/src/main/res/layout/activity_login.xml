<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="16dp"
    tools:context=".activities.access.LoginActivity">


    <TextView
        android:id="@+id/login_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="72dp"
        android:text="@string/login_intro_line"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_email_label"
        style="@style/labels"
        android:layout_marginStart="112dp"
        android:layout_marginTop="60dp"
        android:text="@string/user_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_welcome" />


    <EditText
        android:id="@+id/user"
        style="@style/textBoxes"
        android:layout_marginStart="120dp"
        android:autofillHints="emailAddress"
        android:hint="@string/email_hint"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_email_label"
        app:layout_constraintStart_toEndOf="@+id/user_email_label" />

    <TextView
        android:id="@+id/password_label"
        style="@style/labels"
        android:layout_marginTop="32dp"
        android:text="@string/password_label"
        app:layout_constraintStart_toStartOf="@+id/user_email_label"
        app:layout_constraintTop_toBottomOf="@+id/user_email_label" />

    <EditText
        android:id="@+id/userPass"
        style="@style/textBoxes"
        android:layout_marginStart="84dp"
        android:autofillHints="password"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/password_label"
        app:layout_constraintEnd_toEndOf="@+id/user"
        app:layout_constraintStart_toEndOf="@+id/password_label" />

    <Button
        android:id="@+id/login_button"
        style="@style/dark_button"
        android:onClick="login"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="@+id/go_to_registration_button"
        app:layout_constraintEnd_toEndOf="@+id/login_welcome"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/go_to_registration_button"
        app:layout_constraintTop_toTopOf="@+id/go_to_registration_button" />

    <Button
        android:id="@+id/go_to_registration_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="goToRegistration"
        android:text="@string/sign_in"
        app:layout_constraintStart_toStartOf="@+id/password_label"
        app:layout_constraintTop_toBottomOf="@+id/password_label" />
    <!-- Esto estaba dentro del button pero estaba dando problemas-->
    <!--style="@style/Widget.MaterialComponents.Button.TextButton" -->
    <!--app:icon="@drawable/ic_add_24dp"-->

</androidx.constraintlayout.widget.ConstraintLayout>