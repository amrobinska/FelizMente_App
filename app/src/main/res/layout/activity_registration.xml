<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="16dp"
    tools:context=".RegistrationActivity">


    <TextView
        android:id="@+id/registration_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_intro_line"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <TextView
        android:id="@+id/userEmailLabel"
        style="@style/labels"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/user_name_label"
        app:layout_constraintStart_toStartOf="@+id/registration_introduction"
        app:layout_constraintTop_toBottomOf="@+id/registration_introduction" />

    <EditText
        android:id="@+id/userEmailAddress"
        style="@style/textBoxes"
        android:autofillHints="emailAddress"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@+id/userEmailLabel"
        app:layout_constraintEnd_toEndOf="@+id/registration_introduction"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toEndOf="@+id/userEmailLabel" />

    <TextView
        android:id="@+id/passwordUserLabel"
        style="@style/labels"
        android:layout_marginTop="28dp"
        android:text="@string/password_label"
        app:layout_constraintStart_toStartOf="@+id/userEmailLabel"
        app:layout_constraintTop_toBottomOf="@+id/userEmailLabel" />

    <EditText
        android:id="@+id/userPassword"
        style="@style/textBoxes"
        android:autofillHints="password"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordUserLabel"
        app:layout_constraintEnd_toEndOf="@+id/userEmailAddress"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/passwordUserLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_button"
        style="@style/dark_button"
        android:onClick="addUser"
        android:text="@string/sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/go_back_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordUserLabel"
        app:layout_constraintVertical_bias="0.336" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_back_button"
        style="@style/light_button"
        android:onClick="goBackToLogin"
        android:text="@string/go_back"
        app:layout_constraintBaseline_toBaselineOf="@+id/registration_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/registration_button"
        app:layout_constraintStart_toStartOf="@+id/userPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>