<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="16dp"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_intro_line"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/usernameLabel"
        style="@style/labels"
        android:layout_marginStart="120dp"
        android:layout_marginTop="48dp"
        android:text="@string/user_name_label"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/userName"
        style="@style/textBoxes"
        android:inputType="textPersonName"
        android:lastBaselineToBottomHeight="@id/usernameLabel"
        app:layout_constraintBaseline_toBaselineOf="@+id/usernameLabel"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toEndOf="@+id/usernameLabel" />

    <TextView
        android:id="@+id/userEmailLabel"
        style="@style/labels"
        android:layout_marginTop="28dp"
        android:text="@string/e_mail_label"
        app:layout_constraintStart_toStartOf="@+id/usernameLabel"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabel" />


    <EditText
        android:id="@+id/userEmailAddress"
        style="@style/textBoxes"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@+id/userEmailLabel"
        app:layout_constraintEnd_toEndOf="@+id/userName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/userEmailLabel" />

    <TextView
        android:id="@+id/passwordUserLabel"
        style="@style/labels"
        android:layout_marginTop="28dp"
        android:text="@string/password_label"
        app:layout_constraintStart_toStartOf="@+id/userEmailLabel"
        app:layout_constraintTop_toBottomOf="@+id/userEmailLabel" />

    <EditText
        android:id="@+id/userPassword"
        style="@style/textBoxes"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordUserLabel"
        app:layout_constraintEnd_toEndOf="@+id/userEmailAddress"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/passwordUserLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_button"
        style="@style/dark_button"
        android:text="@string/sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordUserLabel"
        app:layout_constraintTop_toBottomOf="@+id/passwordUserLabel"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        style="@style/light_button"
        android:text="@string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/registration_button"
        app:layout_constraintEnd_toEndOf="@+id/userPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>