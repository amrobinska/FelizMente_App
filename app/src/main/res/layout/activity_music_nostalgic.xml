<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.music.MusicNostalgicActivity"
    android:id="@+id/root">
<com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
    android:id="@+id/youtube_player_view"
    style="@style/videoSetUpStyle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

</com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_video_button"
        style="@style/light_button"
        android:layout_marginBottom="16dp"
        android:text="@string/next_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exitNostalgicbutton"
        style="@style/light_button"
        android:layout_marginEnd="16dp"
        android:text="@string/exit"
        app:layout_constraintBaseline_toBaselineOf="@+id/next_video_button"
        app:layout_constraintEnd_toEndOf="@+id/youtube_player_view"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="exitVideo"/>


</androidx.constraintlayout.widget.ConstraintLayout>


