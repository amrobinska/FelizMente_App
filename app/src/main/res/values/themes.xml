<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Theme.FelizMente"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lochinvar</item>
        <item name="colorPrimaryVariant">@color/alice_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/your_pink</item>
        <item name="colorSecondaryVariant">@color/bright_red</item>
        <item name="colorOnSecondary">@color/night_rider</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="layout">
        <item name="android:background">@color/lochinvar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="title_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_marginBottom">20dp</item>


    </style>

    <style name="title_brown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/league_spartan_bold</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style
        name = "card_view">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">260dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style
        name="card_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/night_rider</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style
        name="textBoxes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style
        name="form_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style
        name="dark_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="rippleColor">@color/bright_red</item>
        <item name="cornerRadius">25dp</item>
        <item name="backgroundTint">@color/wild_watermelon</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style
        name="light_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name ="android:textColor">@color/alice_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="strokeColor">@color/alice_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="iconPadding">20dp</item>
        <item name="rippleColor">@color/your_pink</item>
    </style>

    <style
        name="quiz_button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="rippleColor">@color/bright_red</item>
        <item name="cornerRadius">25dp</item>
        <item name="backgroundTint">@color/wild_watermelon</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="videoSetUpStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">76dp</item>
        <item name="autoPlay">false</item>
        <item name="enableAutomaticInitialization">false</item>
    </style>


</resources>